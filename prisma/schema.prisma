// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["extendedWhereUnique"]
}

model User {
  id Int @id @default(autoincrement())
  uuid String @unique @default(uuid())

  email          String?
  password       String?
  phone          String?
  nickname       String
  profileImageURL String?
  socialType     String?
  refreshToken  String
  fcmToken       String
  title         String
  kakaoId      BigInt?  
  appleId      String?  
  appleRefreshToken String?

  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  UserPlant UserPlant[]
}

model Plant {
  id Int @id @default(autoincrement())

  cycle          Int
  name           String
  introduction   String
  meaning        String
  explanation    String
  circleImageURL String
  gifURL         String

  isDeleted Boolean @default(false)

  PlantLevel PlantLevel[]
  UserPlant  UserPlant[]
}

model PlantLevel {
  id Int @id @default(autoincrement())

  plant   Plant @relation(fields: [plantId], references: [id])
  plantId Int

  level       Int
  levelName   String
  description String
  imageURL    String

  isDeleted Boolean @default(false)
}

model UserPlant {
  id Int @id @default(autoincrement())

  user    User  @relation(fields: [userId], references: [id])
  userId  Int
  plant   Plant @relation(fields: [plantId], references: [id])
  plantId Int

  nickname   String
  instagram  String?
  phone      String?
  waterCycle Int
  waterCount Int     @default(0)
  isNotified Boolean @default(true)
  waterTime String?
  loveGauge  Float   @default(0.0)

  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  Water     Water[]
}

model Water {
  id Int @id @default(autoincrement())

  userPlant  UserPlant @relation(fields: [userPlantId], references: [id])
  userPlantId Int

  review String?

  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  WaterKeyword WaterKeyword[]
}

model WaterKeyword {
  id Int @id @default(autoincrement())

  water   Water @relation(fields: [waterId], references: [id])
  waterId Int

  keyword String

  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
