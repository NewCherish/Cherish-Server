// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())

  email          String?
  password       String?
  phone          String?
  nickname       String
  profilImageURL String
  socialType     String?
  fcmToken       String

  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  UserPlant UserPlant[]
  Water     Water[]
}

model Plant {
  id Int @id @default(autoincrement())

  cycle          Int
  name           String
  introduction   String
  meaning        String
  explanation    String
  circleImageURL String
  gifURL         String

  isDeleted Boolean @default(false)

  PlantLevel PlantLevel[]
  UserPlant  UserPlant[]
}

model PlantLevel {
  id Int @id @default(autoincrement())

  plant   Plant @relation(fields: [plantId], references: [id])
  plantId Int

  level       Int
  levelName   String
  description String
  imageURL    String

  isDeleted Boolean @default(false)
}

model UserPlant {
  id Int @id @default(autoincrement())

  user    User  @relation(fields: [userId], references: [id])
  userId  Int
  plant   Plant @relation(fields: [plantId], references: [id])
  plantId Int

  nickname   String
  instagram  String?
  phone      String?
  waterCycle Int
  waterCount Int     @default(0)
  isNotified Boolean @default(true)
  noticeTime String?
  loveGauge  Float   @default(0.0)
  isWatered  Boolean @default(false)

  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Water {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  review String?

  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  WaterKeyword WaterKeyword[]
}

model WaterKeyword {
  id Int @id @default(autoincrement())

  water   Water @relation(fields: [waterId], references: [id])
  waterId Int

  keyword String

  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model PlantStatus {
  id Int @id @default(autoincrement())

  day     Int
  status  String
  message String
  gauge   Float

  isDeleted Boolean @default(false)
}
